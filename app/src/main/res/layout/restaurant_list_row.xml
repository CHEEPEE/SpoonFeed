<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgStoreProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_account_circle_black_24dp"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblStoreRating"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rating_background"
                android:padding="5dp"
                android:text="4.7"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imgStoreProfile"
                app:layout_constraintTop_toTopOf="@+id/imgStoreProfile" />

            <TextView
                android:id="@+id/lblStoreNumberReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="177 Reviews"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/lblStoreRating"
                app:layout_constraintTop_toTopOf="@+id/lblStoreRating" />

            <TextView
                android:id="@+id/lblRestaurantName"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginTop="8dp"
                android:text="Restaurant Name"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/lblStoreRating"
                app:layout_constraintTop_toBottomOf="@+id/lblStoreRating" />

            <TextView
                android:id="@+id/lblRestaurantLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Restaurant Location"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/lblStoreRating"
                app:layout_constraintTop_toBottomOf="@+id/lblRestaurantName" />

            <TextView
                android:id="@+id/lblMinuteAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="8dp"
                android:text="20 minutes Away"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblRestaurantLocation" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>